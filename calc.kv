<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: 'right'
            font_size: 65
            size_hint: (1, .15)
            multiline: True

        GridLayout:
            cols: 4
            rows: 5

            #row
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "DEL"

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: u"\u00ab"
                on_release: root.remove()

            Button:
                id: clear
                size_hint: (.2, .2)
                font_size: 32
                text: "C"
                on_press: root.clear()

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "/"
                on_release: root.math_sign('/')

            Button:
                id: seven
                size_hint: (.2, .2)
                font_size: 32
                text: "7"
                background_color: (157/255, 157/255, 157/255, 1)
                on_release: root.number_clicked(7)

            Button:
                id: eight
                size_hint: (.2, .2)
                font_size: 32
                text: "8"
                background_color: (157/255, 157/255, 157/255, 1)
                on_release: root.number_clicked(8)

            Button:
                id: nine
                size_hint: (.2, .2)
                font_size: 32
                text: "9"
                background_color: (157/255, 157/255, 157/255, 1)
                on_release: root.number_clicked(9)


            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "*"
                on_release: root.math_sign('*')


            Button:
                id: four
                size_hint: (.2, .2)
                font_size: 32
                text: "4"
                background_color: (157/255, 157/255, 157/255, 1)
                on_release: root.number_clicked(4)

            Button:
                id: five
                size_hint: (.2, .2)
                font_size: 32
                text: "5"
                background_color: (157/255, 157/255, 157/255, 1)
                on_release: root.number_clicked(5)

            Button:
                id: six
                size_hint: (.2, .2)
                font_size: 32
                text: "6"
                background_color: (157/255, 157/255, 157/255, 1)
                on_release: root.number_clicked(6)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "-"
                on_release: root.math_sign('-')

            Button:
                id: one
                size_hint: (.2, .2)
                font_size: 32
                text: "1"
                background_color: (157/255, 157/255, 157/255, 1)
                on_release: root.number_clicked(1)

            Button:
                id: two
                size_hint: (.2, .2)
                font_size: 32
                text: "2"
                background_color: (157/255, 157/255, 157/255, 1)
                on_release: root.number_clicked(2)

            Button:
                id: three
                size_hint: (.2, .2)
                font_size: 32
                text: "3"
                background_color: (157/255, 157/255, 157/255, 1)
                on_release: root.number_clicked(3)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "+"
                on_release: root.math_sign('+')

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "+-"
                on_release: root.pos_neg()

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "0"
                background_color: (157/255, 157/255, 157/255, 1)
                on_release: root.number_clicked(0)

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "."
                on_release: root.dot()

            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "="
                on_release: root.equals()